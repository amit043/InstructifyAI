  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "",
          "const useJwt = pm.environment.get('use_jwt');",
          "const jwt = pm.environment.get('jwt');",
          "const role = pm.environment.get('role') || 'viewer';",
          "if (useJwt && jwt) {",
          "  pm.request.headers.upsert({ key: 'Authorization', value: 'Bearer ' + jwt });",
          "  pm.request.headers.remove('X-Role');",
          "} else {",
          "  pm.request.headers.upsert({ key: 'X-Role', value: role });",
          "}",
          "const accept = pm.environment.get('accept') || 'application/json';",
          "pm.request.headers.upsert({ key: 'Accept', value: accept });"
        ]
      }
    }
